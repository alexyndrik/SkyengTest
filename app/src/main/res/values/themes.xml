<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkyengTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Description">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

    <style name="WordTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/word_title_text_size</item>
    </style>

    <style name="Meaning">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/meaning_text_size</item>
    </style>

    <style name="Meaning.Description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/meaning_description_text_size</item>
    </style>

    <!-- Card View -->

    <style name="CardView.Default" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">@dimen/search_corner_radius</item>
    </style>

    <style name="CardView.Search" parent="CardView.Default">
        <item name="cardBackgroundColor">@color/grey_100</item>
    </style>

    <style name="CardView.Meaning" parent="CardView.Default">
        <item name="cardBackgroundColor">@color/blue</item>
    </style>

    <!-- Recycler Viewer -->

    <style name="RecyclerViewerDefault">
        <item name="android:paddingTop">@dimen/default_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/default_vertical_padding</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:clipToPadding">false</item>
    </style>

</resources>